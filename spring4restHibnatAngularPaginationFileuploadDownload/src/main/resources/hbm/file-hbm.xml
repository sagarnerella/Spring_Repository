<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
<class name="com.osi.pojo.FilePojo" table="myfile">
<id column="file_id" name="fileId">
<generator class="increment"></generator>
 </id>
 <property name="bytes" type="binary" column="IMAGE"></property>
 <property name="fileName" type="string" column="file_name"></property>
</class>
</hibernate-mapping>